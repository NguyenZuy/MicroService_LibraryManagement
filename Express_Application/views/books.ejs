<script>

    function goToBookManagement() {
        window.location.href = '/bookManagement';
    }

    // Sắp xếp
    function sortBooks() {
        var dropdown = document.getElementById('sortDropdown');
        var selectedOption = dropdown.value.split('-');
        var criteria = selectedOption[0];
        var order = selectedOption[1];

        console.log(criteria);
        console.log(order);

        var bookList = document.getElementById('bookList');
        var books = Array.from(bookList.getElementsByTagName('li'));

        console.log(books);

        books.sort(function (a, b) {
            var textA, textB;
            if (criteria === 'title') {
                textA = a.querySelector('h4').innerText.toLowerCase();
                textB = b.querySelector('h4').innerText.toLowerCase();
            } else if (criteria === 'author') {
                textA = a.querySelector('p:nth-of-type(1)').innerText.toLowerCase();
                textB = b.querySelector('p:nth-of-type(1)').innerText.toLowerCase();
            } else if (criteria === 'category') {
                textA = a.querySelector('p:nth-of-type(2)').innerText.toLowerCase();
                textB = b.querySelector('p:nth-of-type(2)').innerText.toLowerCase();
            }

            if (order === 'asc') {
                return textA.localeCompare(textB);
            } else {
                return textB.localeCompare(textA);
            }
        });

        // Clear the current list
        bookList.innerHTML = '';

        // Append the sorted books
        books.forEach(function (book) {
            bookList.appendChild(book);
        });
    }

    document.addEventListener("DOMContentLoaded", function () {
        const itemsPerPage = 15; // Số lượng mục trên mỗi trang
        const bookList = document.getElementById("bookList");
        const pagination = document.getElementById("pagination");
        const items = Array.from(bookList.children);
        const totalPages = Math.ceil(items.length / itemsPerPage);

        function showPage(page) {
            // Ẩn tất cả các mục
            items.forEach((item, index) => {
                item.style.display = "none";
            });

            // Hiển thị các mục của trang hiện tại
            const start = (page - 1) * itemsPerPage;
            const end = start + itemsPerPage;
            items.slice(start, end).forEach(item => {
                item.style.display = "block";
            });

            // Cập nhật các nút phân trang
            Array.from(pagination.children).forEach((button, index) => {
                if (index + 1 === page) {
                    button.classList.add("active");
                } else {
                    button.classList.remove("active");
                }
            });
        }

        function createPagination() {
            for (let i = 1; i <= totalPages; i++) {
                const button = document.createElement("button");
                button.textContent = i;
                button.addEventListener("click", () => showPage(i));
                pagination.appendChild(button);
            }
        }

        createPagination();
        showPage(1); // Hiển thị trang đầu tiên

        // Tìm kiếm theo tên sách
        document.getElementById('searchInput').addEventListener('input', function () {
            var filter = this.value.toLowerCase();
            var bookList = document.getElementById('bookList');
            var books = bookList.getElementsByTagName('li');

            for (var i = 0; i < books.length; i++) {
                var title = books[i].getElementsByTagName('h4')[0].innerText.toLowerCase();
                var author = books[i].getElementsByTagName('p')[0].innerText.toLowerCase();
                var category = books[i].getElementsByTagName('p')[1].innerText.toLowerCase();

                if (title.includes(filter) || author.includes(filter) || category.includes(filter)) {
                    books[i].classList.remove('hidden');
                } else {
                    books[i].classList.add('hidden');
                }
            }
        });
    });
</script>