<script>
    function toggleForm() {
        var form = document.getElementById("orderForm");
        if (form.style.display === "none") {
            form.style.display = "block";
        } else {
            form.style.display = "none";
        }
    }

    async function submitOrderForm(event) {
        event.preventDefault();

        const form = document.getElementById('orderForm');
        const formData = new FormData(form);
        const data = {
            orderDate: formData.get('orderDate'),
            supplierName: formData.get('supplierName')
        };

        console.log(data);

        try {
            const response = await fetch('/orderManagement', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            if (!response.ok) {
                const errorData = await response.json();
                showErrorDialog(errorData.error);
            } else {
                window.location.href = '/addDetailOrder';
            }
        } catch (error) {
            console.error('Error submitting loan form:', error);
            showErrorDialog('An unexpected error occurred. Please try again later.');
        }
    }

    function showErrorDialog(message) {
        alert(message); // Thay thế alert bằng dialog tùy chỉnh nếu cần
    }

    const orders = JSON.parse(document.getElementById("orderData").textContent);
    document.addEventListener("DOMContentLoaded", function () {
        orders.forEach(function (order) {
            document.getElementById("watchDetailButton_" + order.id).addEventListener("click", function () {
                window.location.href = "/detailOrder/" + order.id;
            });
        });
    });
</script>
